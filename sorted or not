def sortedornot(n,arr):
    temp=True
    for i in range(1,n):
        if arr[i]<=arr[i-1]:
            temp=False
            break
    if temp==False:
        for i in range(1,n):
            if arr[i]>=arr[i-1]:
                return False
        temp=True
    return temp
    
n=int(input())
arr=list(map(int,input().split()))
print(sortedornot(n,arr))
